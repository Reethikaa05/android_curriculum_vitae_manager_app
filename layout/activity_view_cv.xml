<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/lightb"
    android:layout_height="match_parent">


    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Back Button"
        android:src="@drawable/ic_back"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- Title -->
    <TextView
        android:id="@+id/title_view_full_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Full CV"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/faculty_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/title_view_full_cv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="Faculty Image"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
        android:src="@drawable/rajesh" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/faculty_image"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Personal Information Section -->
            <TextView
                android:id="@+id/personal_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/personal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Experience Section -->
            <TextView
                android:id="@+id/experience_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/experience_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Education Section -->
            <TextView
                android:id="@+id/education_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/education_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Membership Section -->
            <TextView
                android:id="@+id/membership_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membership"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/membership_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Research Interests Section -->
            <TextView
                android:id="@+id/research_interests_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Research Interests"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/research_interests_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Book Section -->
            <TextView
                android:id="@+id/book_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/book_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Book Chapter Section -->
            <TextView
                android:id="@+id/book_chapter_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Chapter"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/book_chapter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Journal Section -->
            <TextView
                android:id="@+id/journal_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/journal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Conference Paper Section -->
            <TextView
                android:id="@+id/conference_paper_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conference Paper"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/conference_paper_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Citation Section -->
            <TextView
                android:id="@+id/citation_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citation"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/citation_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Invited Lectures Section -->
            <TextView
                android:id="@+id/invited_lectures_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invited Lectures"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/lectures_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Programs Attended Section -->
            <TextView
                android:id="@+id/programs_attended_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programs Attended"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/programs_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Consultancy Section -->
            <TextView
                android:id="@+id/consultancy_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultancy"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/consultancy_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Awards Section -->
            <TextView
                android:id="@+id/awards_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awards"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/awards_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Patents Section -->
            <TextView
                android:id="@+id/patents_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patents"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/patents_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Scholar Details Section -->
            <TextView
                android:id="@+id/scholar_details_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scholar Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:id="@+id/scholar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <!-- Download and Share Buttons -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:gravity="center">

        <!-- Download Button -->
        <Button
            android:id="@+id/download_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download"
            android:layout_marginEnd="16dp"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/teal_700" />

        <!-- Share Button -->
        <Button
            android:id="@+id/share_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/teal_700" />
    </LinearLayout>

</RelativeLayout>