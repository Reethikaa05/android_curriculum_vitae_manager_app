<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/lightb">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    <!-- Title for the Experience Details -->
    <TextView
        android:id="@+id/title_experience_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" View Experience Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@color/activity_background"/>

    <LinearLayout
        android:id="@+id/experience_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">
        <!-- Experience details will be added here dynamically -->
    </LinearLayout>

</LinearLayout>


