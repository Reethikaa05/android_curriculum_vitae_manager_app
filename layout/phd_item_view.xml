<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Container for labels and values -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="8dp">

        <!-- Labels Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Scholar Name Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scholar Name:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Registration Number Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Number:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Registration Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration Date:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Submission Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submission Date:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Viva Date Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viva Date:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Degree Type Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree Type:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Mode of Degree Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode of Degree:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Status Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <!-- Values Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Scholar Name Value -->
            <TextView
                android:id="@+id/phd_scholar_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Registration Number Value -->
            <TextView
                android:id="@+id/phd_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Registration Date Value -->
            <TextView
                android:id="@+id/phd_reg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Submission Date Value -->
            <TextView
                android:id="@+id/phd_submission_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Viva Date Value -->
            <TextView
                android:id="@+id/phd_viva_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Degree Type Value -->
            <TextView
                android:id="@+id/phd_degree_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Mode of Degree Value -->
            <TextView
                android:id="@+id/phd_mode_of_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />

            <!-- Status Value -->
            <TextView
                android:id="@+id/phd_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

    <!-- Divider between PhD entries -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/button_text"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

</LinearLayout>
