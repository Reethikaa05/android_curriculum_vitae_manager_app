<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/lightb">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/display_personal_iv_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/rajesh"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        app:shapeAppearanceOverlay="@style/CircleImageViewStyle" />

    <TextView
        android:id="@+id/personal_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" View Personal Details"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <!-- Faculty Name -->
    <TextView
        android:id="@+id/display_personal_tv_faculty_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_iv_img"
        android:layout_marginTop="29dp"
        android:text="Faculty Name"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Designation -->
    <TextView
        android:id="@+id/display_personal_tv_designation"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_tv_faculty_name"
        android:layout_marginTop="20dp"
        android:text="Designation"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Department -->
    <TextView
        android:id="@+id/display_personal_tv_department"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_tv_designation"
        android:layout_marginTop="20dp"
        android:text="Department"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Age -->
    <TextView
        android:id="@+id/display_personal_tv_age"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_tv_department"
        android:layout_marginTop="20dp"
        android:text="Age"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Gender -->
    <TextView
        android:id="@+id/display_personal_tv_gender"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_tv_age"
        android:layout_marginTop="20dp"
        android:text="Gender"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Contact -->
    <TextView
        android:id="@+id/display_personal_tv_contact"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_personal_tv_gender"
        android:layout_marginTop="20dp"
        android:text="Contact"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/display_personal_tv_email"
        android:layout_width="356dp"
        android:layout_height="72dp"
        android:layout_below="@id/display_personal_tv_contact"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <!-- Back Button -->
    <Button
        android:id="@+id/display_personal_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Back" />

</RelativeLayout>
